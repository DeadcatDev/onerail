{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier -l --write \"**/*.{js,ts}\"",
    "format-check": "prettier --check \"**/*.{js,ts}\"",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpile-only --prefer-ts-exts src/index.ts"
  },
  "dependencies": {
    "express": "^5.1.0",
    "express-rate-limit": "^7.3.0",
    "mysql2": "^3.14.1",
    "sequelize": "^6.37.5",
    "uuid": "^11.1.0",
    "wait-port": "^1.1.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8",
    "swagger-ui-express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^7.18.3"
  },
  "resolutions": {
    "@babel/core": "7.23.9"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.2.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "js"],
    "roots": ["<rootDir>/spec"],
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}
